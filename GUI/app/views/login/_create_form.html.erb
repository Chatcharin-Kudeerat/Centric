<div id="div-create-user" class="row shadow-sm collapse multi-collapse show" data-regis-form-target="create_form">
    <div class="row justify-content-end">
        <%# <button type="button" id="btn-upload-togle" class="btn rounded-pill" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="20" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
