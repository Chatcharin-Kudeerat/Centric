<div id="div-upload-user" class="row shadow-sm collapse multi-collapse" data-regis-form-target="upload_form">
    <div class="row justify-content-end">
        <button type="button" id="btn-create-togle" class="btn rounded-pill" data-action="click->regis-form#toggle_form" title="Create user">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2z"/>
                <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5M3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8m0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5"/>
            </svg>
        </button>
    </div>
    <%= form_for :regis_upload_form, url: upload_user_path(format: :json), method: :POST do |f| %>
        <h3 class="header-registration"> Upload User </h3>
        <div class="mb-3 row">
            <label for="organization" class="col-sm-3 col-form-label text-end">Organization ID: </label>
            <div class="col-sm-9">
                <%= f.select :organization, options_for_select(@organizations, session["current_organization"]), {}, {class: "form-control form-select select_info_user is_input", id: "organization_upload_field", required: true, disabled: edit_organization?()} %>
            </div>
        </div>
        <div class="my-3 row">
            <label for="organization" class="col-sm-3 col-form-label text-end">File Upload: </label>
            <div class="col-sm-9">
                <div class="input-group">
                    <%= f.file_field :import_data, direct: true, accept:"text/csv", required: true, id:"customFile", class:"form-control mdl-textfield__input custom-file-input border w-100", aria_describedby:"inputGroupFileAddon04", aria_label:"Upload" %>
                </div>
                <%# <%= f.file_field :import_data, direct: true, accept:"text/csv", required: true, id:"customFile", class:"mdl-textfield__input custom-file-input border w-100" %>
                <%# <label class="custom-file-label" for="customFile">Choose file</label> %>
            </div>
        </div>
        <div class="mt-5 mb-3 row">
            <div class="col-sm-12">
                <%= f.submit "Upload", class: "btn btn-primary w-25", id: "btn_upload" %>
                <%= link_to "Cancel", root_path(), class: "btn btn_cancel w-25 border" %>
            </div>
        </div>
    <% end %>
</div>