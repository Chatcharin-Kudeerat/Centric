<% is_logged_in? %>

<div class="row">
  <div class="col datetime-label fw-semibold">
    <div class="container grid-full"><span id="txt-date-report">Report : <%= Time.now().strftime("%Y-%m-%d") %></span></div>
  </div>
</div>
<div class="container grid-full" style="margin-top:10px;" data-controller="select-date">
    <div class="row">
        <div class="col-3">
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group" style="margin-left:20px;">
              <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" data-action="change->select-date#select_date" checked>
              <label class="btn" id="btn-date-daily" for="btnradio1">Daily</label>

              <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off" data-action="change->select-date#select_date">
              <label class="btn" id="btn-date-monthly" for="btnradio2">Monthly</label>

              <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off" data-action="change->select-date#select_date">
              <label class="btn" id="btn-date-range" for="btnradio3">Date range</label>
            </div>
        </div>
    </div>
</div>

<% if session["current_user"]["role"] == 1 || session["current_user"]["role"] == 2 %>
  <div class="container text-center grid-full">
      <div class="row">
          <div class="col bg-block">
              <%= render partial: "graph" %>
          </div>
      </div>
  </div>
<% end %>

<div class="container text-center grid-full">
  <div class="row">
    <% if session["current_user"]["role"] == 1 || session["current_user"]["role"] == 2 %>
      <div class="col bg-block">
        <%= render partial: "op_result" %>
      </div>
      <div class="col bg-block">
        <%= render partial: "individual_sound_source" %>
      </div>
    <% elsif session["current_user"]["role"] == 3 %>
      <div class="col bg-block sv">
        <%= render partial: "op_result_sv" %>
      </div>
      <div class="col bg-block sv">
        <%= render partial: "individual_sound_source_sv" %>
      </div>
    <% else %>
      <div class="col bg-block sv">
        <%= render partial: "op_result_op" %>
      </div>
      <div class="col bg-block sv">
        <%= render partial: "individual_sound_source_op" %>
      </div>
    <% end %>
  </div>
</div>